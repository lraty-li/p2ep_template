{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceFolder}\\build_all.bat",
            "windows": {
                "command": "${workspaceFolder}\\build_all.bat"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "清除翻译进度",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-Command",
                "Remove-Item -Path '${workspaceFolder}\\texts\\translate_progress.json', '${workspaceFolder}\\texts\\speakers_translated.json', '${workspaceFolder}\\texts\\texts_translated.json' -ErrorAction SilentlyContinue; Write-Host '已清除翻译进度文件'"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true,
                "clear": false
            }
        }
    ]
}

